<UI>:
    id:scr_manager
    Scr1:
    Scr2:



#### หน้า1 ####
<Scr1>:
    name:"scr1"
    canvas.before:
        Rectangle:
            source:"num.png"
            size: root.width, root.height
            pos: self.pos
    Button:
        text:"แปลงเลขฐาน"
        size_hint: 0.50,0.05
        pos_hint:{'center_x': 0.5,'center_y': 0.5}
        font_name: "tahoma"
        on_press : app.root.current = "scr2"

###### หน้า2 ######
<Scr2>:
    name:"scr2"
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols:1
            TextInput:
                id: txt_number
        BoxLayout:
            ToggleButton:
                text:"base 2"
                group: 'convert_mode'
                on_press: root.convert(*args)
            ToggleButton:
                text:"base 8"
                group: 'convert_mode'
                on_press: root.convert(*args)    
            ToggleButton:
                text:"base 16"
                group: 'convert_mode'
                on_press: root.convert(*args)   
        Label:
            id: lbl_output

